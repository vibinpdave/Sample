@model HRMS.UI.Models.EmployeeViewModel

<h2>Create Employee</h2>

<form method="post">
    <div class="form-group">
        <label>First Name:</label>
        <input type="text" asp-for="FirstName" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Last Name:</label>
        <input type="text" asp-for="LastName" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Email:</label>
        <input type="email" asp-for="Email" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Date of Birth:</label>
        <input type="date" asp-for="DateOfBirth" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Password:</label>
        <input type="password" asp-for="Password" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Status:</label>
        <select asp-for="Status" class="form-control">
            <option value="1">Active</option>
            <option value="0">Inactive</option>
        </select>
    </div>

    <h4>Address Details</h4>

    <div class="form-group">
        <label>Street:</label>
        <input type="text" asp-for="Address.Street" class="form-control" />
    </div>

    <div class="form-group">
        <label>City:</label>
        <input type="text" asp-for="Address.City" class="form-control" />
    </div>

    <div class="form-group">
        <label>State:</label>
        <input type="text" asp-for="Address.State" class="form-control" />
    </div>

    <div class="form-group">
        <label>Postal Code:</label>
        <input type="text" asp-for="Address.PostalCode" class="form-control" />
    </div>

    <div class="form-group">
        <label>Country:</label>
        <input type="text" asp-for="Address.Country" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a href="@Url.Action("Index", "Employee")" class="btn btn-secondary">Cancel</a>
</form>
